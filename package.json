{
  "name": "@univ-lehavre/strings-clustering",
  "version": "0.0.0",
  "description": "Regroupement de chaînes de caractères par similarité",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start:only": "node --env-file .env ./dist/index.js",
    "start": "pnpm run build && pnpm run start:only",
    "types:check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,tsx,jsx,json,md}\"",
    "changeset": "npx @changesets/cli",
    "bump": "npx @changesets/cli version",
    "demo": "pnpm -s tsx demo/index.ts"
  },
  "author": "Pierre-Olivier Chasset",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.5.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-lehavre/strings-clustering.git"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/strings-clustering/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.6.1",
    "prettier": "3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^3.14.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
